init 2:
    $ day3_breakfast_with_un = 0
    $ day3_un_help_accept = 0
    $ day3_house_of_mt = 0
    $ day3_sl_cleaned = 0
    $ day3_us_football = 0
    $ day3_sl_library = 0
    $ day3_us_cleaned = 0
    $ day3_dv_accept = 0
    $ day3_got_fail = 0
    $ day3_sl_evening = 0
    $ day3_un_evening = 0
    $ day3_us_evening = 0
    $ day3_dv_evening = 0
    $ day3_dv_dumped = False
    $ day3_un_dumped = False
    $ d3_volume = 0
    $ set_name('me',u"Семён")

label v17_day3_main1:

    $ backdrop = 'days'

    $ new_chapter(3, u"День третий")

    $ day_time()

    scene bg black 

    window show
    "Ночь я провел будто в бреду. Меня изводили яркие сновидения, сути которых я не мог вспомнить..."
    "Вновь и вновь просыпаясь, я тщетно пытался восстановить сон до мельчайших деталей."
    "Лишь затем, чтобы, позабыв про все, провалиться в новый."
    window hide

    $ persistent.sprite_time = 'day'
    scene bg int_house_of_mt_day 
    show unblink 
    with fade

    play music music_list["everyday_theme"] fadein 5

    window show
    "Семь часов утра."
    th "Что-то сегодня я рано."
    "Ночь не принесла мне отдыха. Я присел на кровати и пару раз ударил себя по щекам, пытаясь проснуться. Поднявшись, я осмотрел комнату."
    "Ольга Дмитриевна еще спала. Одеяло слезло на пол, открывая фигурно трепыхающуюся в такт ее дыханию грудь. С ее чуть приоткрытых губ на подушку сладко стекала слюна."
    "Я сглотнул. Почувствовав крайнюю необходимость в свежем воздухе, я выскочил из дома и направился в сторону умывальников."
    "Сомнительно, что я встречу еще кого-нибудь в такую рань."
    window hide

    $ persistent.sprite_time = 'day'
    scene bg ext_washstand2_day 
    with dissolve

    play sound sfx_open_water_sink
    play sound_loop sfx_water_sink_stream fadein 2

    window show
    "Сегодня ледяная вода показалась мне отнюдь не столь враждебной."
    "Освежающая прохлада помогла мне очистить мысли. Наконец мне удалось выбросить из головы липкие остатки тяжелой ночи."
    "Придя в себя, я бодро пошел к зданию столовой."
    window hide

    stop sound_loop
    play sound sfx_close_water_sink

    $ renpy.pause(2)

   

    $ persistent.sprite_time = 'day'
    scene bg ext_dining_hall_away_day 
    with dissolve

    play ambience ambience_camp_center_day fadein 2

    window show
    "Похоже, я был одним из первых."
    window hide

    stop ambience fadeout 2

    $ renpy.pause(1)

    $ persistent.sprite_time = 'day'
    scene bg int_dining_hall_day 
    with dissolve

    play ambience ambience_dining_hall_empty fadein 3

    window show
    "Внутри было немноголюдно. В огромном помещении столовой я насчитал отсилы человек пять-шесть."
    th "Что же, так даже лучше."
    "В дальнем углу я увидел Лену."
    "С одной стороны, зная о ее стеснительности, не хотелось ее беспокоить.{w} С другой - если я буду ее игнорировать, это может показаться невежливым."
    th "Можно хотя бы поздороваться, а там - посмотрим."
    "Я уже было направился в ее сторону, как меня кто-то схватил за рукав."
    show mz normal glasses pioneer at center   with dissolve
    "Это была вчерашняя библиотекарша, Женя."
    mz "Бери завтрак и садись, есть разговор."
    me "Э-э..."
    show mz bukal glasses pioneer at center   with dspr
    mz "Ну, чего стоишь?"
    "Я несколько растерялся."
    me "Извини, но не слишком ли это… резко?"
    show mz normal glasses pioneer at center   with dspr
    mz "А что такого-то? Бери завтрак и садись."
    "По-видимому, в происходящем она не находила ничего необычного."
    window hide

    menu:
        "Извини, я хотел с Леной поговорить":
            $ day3_breakfast_with_un = 1
            $ lp_un = (lp_un) + (1)
            jump v17_day3_breakfast_un
        "Ладно, подожди минутку":
            jump v17_day3_breakfast_mz

label v17_day3_breakfast_un:

    window show
    "Решив не упускать лишний шанс поболтать с Леной, я направился к ее столику."
    show mz bukal glasses pioneer at center   with dspr
    mz "Подожди-ка! Успеешь еще!"
    me "Прости, давай потом."
    hide mz  with dissolve
    "Аккуратно освободив свой рукав от руки Жени, я покачал головой и двинулся в дальний конец столовой."
    "Женя что-то недовольно пробурчала мне вслед, но останавливать меня не стала."
    show un normal pioneer at center   with dissolve
    me "Доброе утро, Лена!"
    "Лена подняла глаза на меня."
    show un smile pioneer at center   with dspr
    un "Доброе…"
    "К моему удивлению, сегодня она не покраснела. И даже не подпрыгнула до потолка при звуке моего голоса. Напротив, она очень мило мне улыбнулась."
    me "Ты ждешь кого-нибудь, или я могу..."
    un "Нет-нет, конечно, садись!"
    "Она неожиданно оживленно замахала руками."
    hide un  with dissolve
    "Мне неприятно было признавать это, но, похоже, я был доволен перспективой совместного завтрака даже больше Лены."
    window hide

    with fade

    show un normal pioneer at center   with dspr
    window show
    "Взяв нехитрый завтрак, через минуту я уже сидел рядом с ней, изо всех сил стараясь не краснеть."
    me "Приятного аппетита!"
    show un smile pioneer at center   with dspr
    un "Спасибо."
    "В воздухе повисло неловкое молчание. Мне следовало предвидеть это заранее, Лена - не большая поклонница светских бесед, а уж я - и подавно."
    "Когда я уже почти решился ляпнуть какую-нибудь глупость, она неожиданно посмотрела на меня и спросила:"
    show un normal pioneer at center   with dspr
    un "М-м...скажи, а ты..."
    "Я вопросительно поднял глаза. Похоже, от этого она смутилась пуще прежнего, но все же упрямо продолжила:"
    un "Ты...{w} пойдешь сегодня на танцы?"
    me "Танцы?"
    "Я удивленно посмотрел на нее. Если задуматься, я действительно слышать что-то подобное вчера на линейке..."
    "Лена, чуть не плача, едва слышно пролепетала:"
    un "Н-ну как же...Ольга Дмитриевна вчера говорила..."
    "Мне было больно на нее смотреть. Со всем воодушевлением, на которое только был способен, я воскликнул:"
    me "Ах, танцы! Конечно, Ольга Дмитриевна говорила!{w} Но пойду ли я... не знаю."
    show un surprise pioneer at center   with dspr
    "Лена продолжала пристально на меня смотреть."
    un "А...почему не хочешь идти?"
    me "Нет, я не то, чтобы не хочу. Просто…"
    show un normal pioneer at center   with dspr
    un "Просто..?"
    me "Да никаких особых причин, просто не думал об этом.{w} А что, ты...хотела...со мной?"
    show un shy pioneer at center   with dspr
    "Лена покраснела и отвела взгляд."
    un "Ну, я не знаю насчет..."
    me "Извини, это...это шутка была."
    "Я стиснул зубы. Хотелось провалиться сквозь землю."
    un "Хорошо..."
    "Как-то безучастно произнесла она и уставилась к себе в тарелку, продолжая все больше краснеть."
    th "Дурак, дурак, дурак... Кем ты себя возомнил? С какой стати ей идти с таким как я?{w} С какой стати я вообще кому-то сдался?!"
    "Я постарался сделать вид, что полностью сосредоточен на еде. Лена, все еще красная от смущения, последовала моему примеру."
    window hide

    with fade

    window show
    "Она закончила завтрак быстрее меня."
    show un smile2 pioneer at center   with dspr
    un "Ладно, я пойду… Увидимся!"
    "Она снова улыбнулась мне. Ее обычно печальному лицу удивительно шла эта застенчивая улыбка."
    me "Да... увидимся."
    hide un  with dissolve
    window hide

    $ renpy.pause(1)

    jump v17_day3_main2

label v17_day3_breakfast_mz:

    window show
    "В конце концов, не стоило лишний раз смущать Лену."
    th "С этой Женей я так толком и не говорил.{w} Возможно, получится что-нибудь у нее выяснить…"
    window hide

    with fade

    play music music_list["your_bright_side"] fadein 5

    show mz normal glasses pioneer at center   with dspr
    window show
    "Взяв нехитрый завтрак, через минуту я уже сидел рядом с ней, стараясь держаться как можно уверенней."
    me "Приятного аппетита."
    mz "Спасибо."
    "Я взял в руки вилку, стараясь есть как можно аккуратнее. Казалось, под строгим взглядом Жени невозможно было делать что-либо спустя рукава."
    me "Так о чем ты хотела поговорить?"
    show mz smile glasses pioneer at center   with dspr
    mz "Сегодня у нас в библиотеке…"
    th "Этого стоило ожидать. Зря я согласился сесть с ней."
    mz "После обеда! Не забудь!"
    "Похоже, я пропустил мимо ушей что-то важное."
    me "Прости? Что ты сказала?"
    show mz normal glasses pioneer at center   with dspr
    mz "Говорю, не забудь после обеда прийти в библиотеку."
    me "Зачем?"
    show mz angry glasses pioneer at center   with dspr
    mz "Ты меня вообще слушал?!"
    me "Да, но..."
    "Я инстинктивно отвел глаза."
    show mz rage glasses pioneer at center   with dspr
    "На секунду я ясно почувствовал, что от летящей в лицо тарелки с пюре меня отделяет лишь хрупкая стенка Жениного самоконтроля."
    mz "Сегодня! После обеда! В библиотеку! Разбирать книги! Ты понял?!"
    "Немногочисленные посетители столовой с любопытством косились в нашу сторону."
    me "Да, я...{w} постараюсь."
    show mz angry glasses pioneer at center   with dspr
    mz "Уж постарайся."
    "Слегка смущенно пробурчала Женя. Казалось, ей было немного стыдно за свое поведение."
    "Я решил сыграть на ее небольшом чувстве вины, и спросил с максимально невинным видом:"
    me "Извини, чувствую себя глупо. Со всей этой суматохой напрочь вылетело из головы - какой сейчас год?"
    "Лишь сказав фразу целиком я понял, как же глупо это смотрелось со стороны. Но было поздно."
    show mz bukal glasses pioneer at center   with dspr
    mz "Совсем, что ли, крыша поехала?"
    "Она смотрела на меня с презрительной жалостью. Мне явственно захотелось оказаться где-нибудь далеко-далеко, лишь бы не видеть ее взгляда."
    me "Да, я сам понимаю, что это глупо, но..."
    "Женя молча продолжала смотреть на меня все с тем же выражением глаз."
    me "Так...какой?"
    "Я криво улыбнулся, сосредоточенно изучая содержимое своей тарелки."
    hide mz  with dissolve
    "Женя встала и направилась к выходу, не сказав ни слова."
    me "Подожди, ты же не доела…"
    "Но она, похоже, даже не собиралась оборачиваться…"
    window hide

    stop music fadeout 3

    $ renpy.pause(1)

    jump v17_day3_main2

label v17_day3_main2:

    window show
    "Я лениво дожевывал еду, погруженный в свои размышления."
    "Разговорами от местных я, очевидно, ничего не добьюсь. Значит ли это, что я должен рыскать по лагерю сам?{w} И что будет, если они обнаружат мое поведение странным?"
    th "Тот ящик...что же там было внутри?"
    "Я вздохнул. У меня в голове не было ни единой идеи, как прояснить ситуацию, при этом не выдавая себя."
    th "Возможно, стоит еще немного выждать. Быть может, я слишком себя накручиваю."

    stop ambience fadeout 2

    "Я вдруг поймал себя на мысли, что не хочу ничего выяснять. Мне нравилось в этом странном лагере. Хоть еще чуть-чуть, но я хотел просто...{w} просто спокойно пожить здесь."
    window hide

    $ persistent.sprite_time = 'day'
    scene bg ext_dining_hall_away_day 
    with dissolve

    window show
    "В раздумьях я вышел из столовой и направился к домику вожатой."
    window hide

    $ persistent.sprite_time = 'day'
    scene bg ext_house_of_mt_day 
    with dissolve

    play ambience ambience_camp_center_day fadein 2

    show mt normal pioneer at center   with dissolve
    window show
    "В дверях я столкнулся с Ольгой Дмитриевной."
    show mt surprise pioneer at center   with dspr
    mt "Семен! Что ты здесь делаешь, сейчас же линейка начнется!"
    th "Проклятье! Совсем забыл про линейку каждым утром! Это может быть весьма утомляюще..."
    me "Да я вот, как раз хотел время уточнить. Уже иду!"
    show mt angry pioneer at center   with dspr
    mt "Какая неорганизованность! Ты смотри, у тебя опять галстук не завязан!"
    mt "Давай, завяжу."
    th "Похоже, в мире есть вещи, которых человек попросту не может избежать."
    show mt normal pioneer at center   with dspr

    stop music fadeout 3

    mt "Так-то лучше. Идем!"
    window hide

    $ persistent.sprite_time = 'day'
    scene bg ext_square_day 
    with dissolve

    play ambience ambience_camp_center_day fadein 2

    window show
    "На линейке Ольга Дмитриевна еще раз напомнила нам о танцах этим вечером."
    mt "Подумайте, как это важно - быть вместе с коллективом, радоваться чудесным мгновениям вашей юности вмести со всеми, проводить каждый миг..."
    "Я устало вздохнул. Линейка грозила затянуться."
    window hide

    with fade

    window show
    mt "...все желающие могут помочь с разбором библиотечных книг. На этом все! Все свободны!"
    window hide

    with fade2

    window show
    "Морально измученный, я неспеша побрел подальше от площади, как вдруг услышал за спиной грозное:"
    mt "Се-ме-е-ен..."
    "С чувством обреченной решимости, я обернулся."
    show mt angry pioneer at center   with dspr
    mt "И кто, по-твоему, должен помочь с инвентаризацией в медпункте?"
    me "Э-э...доброволец?"
    "Осторожно спросил я, заранее зная ответ."
    show mt rage pioneer at center   with dspr
    mt "Ты! Перекладывать работу на других - недостойно настоящего пионера! Иди в медпункт, доктор Виолетта надеется на тебя!"
    th "Виолетта... Кажется, теперь я начинаю понимать..."
    "Не похоже, чтобы у меня был выбор. Я понуро зашагал в сторону медпункта."
    
    window hide

    stop ambience fadeout 2
    $ renpy.pause(2)


    $ persistent.sprite_time = 'day'
    scene bg ext_aidpost_day 
    with dissolve

    play ambience ambience_camp_center_day fadein 3

    window show
    "Вот и здание медпункта. Я сразу же заметил стоящую на крыльце медсестру. При виде меня ее губы искривились в победной усмешке."

    play music music_list["eternal_longing"] fadein 5

    show cs normal at center   with dissolve
    cs "Ну здравствуй… пионер!"
    cs "Пришел-таки? У меня для тебя есть ответственное задание."
    "Она с видимым удовольствием сделала акцент на последних словах."
    show cs smile at center   with dspr
    cs "По правде говоря, мне уже вызвалась помогать вот эта милая девушка...{w} Но ты же не бросишь даму в беде... пионер?"
    "Из-за спины Виолы показалась Лена. Ее способность скрывать свое присутствие была поистине невероятной."
    
    stop music fadeout 3

    show un normal pioneer at left   with dissolve

    if day3_breakfast_with_un == 1:
        un "Привет еще раз…"
    else:
        un "Привет…"

    show cs normal at center   with dspr
    cs "Вы двое сможете помочь мне составить опись лекарств, которые сегодня привезли."
    th "Лекарства. Сегодня. Привезли.{w} Получается, сегодня кто-то приезжал в лагерь? Но Ольга Дмитриевна же сказала..."
    me "Значит, сегодня кто-то приезжал в лагерь?"
    "Я не думал всерьез, что мне ответят. Однако я наконец-то был близок к получению новой информации о лагере."
    cs "Да, с утра из райцентра, а что?"
    me "А далеко он, этот райцентр?"
    "Я ожидал очередного уклончивого ответа, однако, к моему удивлению, Виола не сказала ничего. Лишь подмигнула, одобрительно улыбнувшись."
    show cs smile at center   with dspr
    cs "После ужина приходите сюда, я объяснила Лене, что делать. Она тебе потом расскажет."
    show un shy pioneer at left   with dspr
    un "Да я... Я и одна могла бы справиться…"
    "Лена, по своему обыкновению, покраснела и потупила глаза в пол."

    if day3_breakfast_with_un == 1:
        th "Утром она казалась куда смелее."

    show cs normal at center   with dspr
    cs "Как знаешь...но там много, несколько коробок."
    cs "Неужели наш кавалер позволит хрупкой девушке делать все в одиночку?"
    show cs shy at center   with dspr
    cs "Что скажешь... пионер?"
    "Судя по ее виду, все происходящее ее несказанно веселило."
    "Честно говоря, тратить весь вечер на подобную работу мне совсем не хотелось, но и отказываться было бы очень неудобно."
    th "Если бы здесь только не было Лены..."
    window hide

    menu:
        "Хорошо, я приду...":
            $ day3_un_help_accept = 1
            $ lp_un = (lp_un) + (1)
            jump v17_day3_helpaccept
        "Простите, но у меня уже были другие планы на вечер...":
            jump v17_day3_helpreject

    jump v17_day3_main3

label v17_day3_helpaccept:

    window show
    cs "Вот и славно!{w} Так и должен отвечать настоящий пионер!"
    "Казалалось, она ни на минуту не сомневалась, что я соглашусь."
    show cs normal at center   with dspr
    cs "Тогда можете идти."

    stop ambience fadeout 2

    play music music_list["timid_girl"] fadein 5

    hide cs  with dissolve
    show un shy pioneer at left:
        linear 1.0 xalign 0.5
    "Я перевел взгляд на Лену, которая все так же сосредоточенно смотрела себе под ноги."
    "Мы молча пошли по дороге прочь от медпункта."
    window hide

    with fade2

    window show
    "..."
    window hide

    $ persistent.sprite_time = 'day'
    scene bg ext_square_day 
    with dissolve

    show un normal pioneer at center   with dissolve
    window show
    un "Спасибо..."
